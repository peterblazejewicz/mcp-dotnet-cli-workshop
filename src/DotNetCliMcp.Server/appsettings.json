// Notes:
// - Comments and trailing commas are supported by Microsoft.Extensions.Configuration.Json
// - Tool-specific environment variable overrides use MCPDOTNETCLI_ prefix
// - Example: MCPDOTNETCLI_Logging__MinimumLevel=Debug
// - Standard dotnet variables (without prefix) work as fallback for compatibility
{
  "Logging": {
    // Minimum level for logging (Trace, Debug, Information, Warning, Error, Critical)
    // Env override: MCPDOTNETCLI_Logging__MinimumLevel (or Logging__MinimumLevel for compatibility)
    "MinimumLevel": "Information",
    "Console": {
      // Serilog console output template
      // Env override: MCPDOTNETCLI_Logging__Console__OutputTemplate
      "OutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
    },
    "File": {
      // Rolling log file path (directory will be created if needed)
      // Env override: MCPDOTNETCLI_Logging__File__Path (or Logging__File__Path for compatibility)
      "Path": "logs/mcp-dotnet-cli-server-.log"
    }
  },
  "McpServer": {
    // MCP Server specific configuration
    // Env overrides: MCPDOTNETCLI_McpServer__Name, MCPDOTNETCLI_McpServer__Description, etc.
    "Name": "io.github.peterblazejewicz/mcp-dotnet-cli",
    "Description": "Exposes .NET CLI capabilities (SDKs, runtimes, environment info) via MCP",
    "Version": "0.1.0-beta"
  }
}
