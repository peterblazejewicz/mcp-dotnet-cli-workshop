<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>
  <packageSourceMapping>
    <!-- Map all Microsoft.* packages to nuget.org -->
    <packageSource key="nuget.org">
      <!-- Relax mapping to allow all packages from nuget.org so we don't need to list transitive dependencies -->
      <package pattern="*" />
      <!-- If you prefer strict allowlisting, remove the '*' and re-add specific patterns as needed. -->
    </packageSource>
  </packageSourceMapping>
</configuration>
